<div class="container">
  <div class="row">
    <div class="admin-heading col-3">
      <h2 class="mb-4 pt-3 pb-3 text-center">会員一覧</h2>
    </div>
    
    <div class="col-8 mx-auto">
      <table class="table table-hover rounded-top rounded-bottom table_border_radius admin-customer-table">
        <thead class="thead-dark">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
　　　　<% @users.each do |user| %>
        <tr>
        <td><%= user.id %></td>
        <td><%= link_to user.name, admins_user_path(user.id) %></td>
        <td><%= user.email %></td>
        <td>
            <% if user.is_deleted %>
              <p class="text-secondary">退会</p>
            <% else %>
              <p class="text-success">有効</p>
            <% end %>
        </td>
        </tr>
        <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>