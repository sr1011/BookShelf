<div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= render "users/books/genre", genres: @genres %>
    </div>
    
    <div class="col-xs-8">
      <table class="table book-index">
      <h1>Book一覧</h1>
      <div class="text-right">
      </button><%= link_to "新規登録" ,new_admins_book_path, class: "btn btn-primary" %>
          <thead>
          <th></th>
          <th>タイトル</th>
          <th>作者</th>
          <th>ジャンル</th>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to users_book_path(book.id) do %>
                <%= attachment_image_tag book, :image, :fill, 100, 100, format: 'jpeg' %>
                <% end %>
              </td>
              <td><%= book.name %></td>
              <td><%= book.author %></td>
              <td><%= book.genre.name %></td>
              <td><%= link_to "編集", edit_admins_book_path(book.id),class: 'btn btn-success' %></td>
              <td><%= link_to "削除する", admins_book_path(book.id), method: :delete, class: 'btn btn-danger' %></td>
<% end %>