<div class='container t-5'>
    <div class='row'>
      <div class="col-sm-12 px-5 px-sm-0">
      <h2 class="mt-5 mb-3">ジャンル追加</h2>
      <%= form_with model:@genre, url:'/admins/genres', local:true do |f| %>
         <%= f.label :ジャンル名　 %>
         <%= f.text_field :name %>
         <%= f.submit '新規登録', class: "btn btn-primary" %>
        <% end %>
      <h2 class="mt-5 mb-3">ジャンル一覧</h2>
      <div class="d-flex flex-wrap mt-5">
      <% @genres.each do |genre| %>
        <div class="col-3 px-2 mb-4">
          <p class='font-weight-bold text-dark mt-2 mb-2' style='font-size: 20px;'><%= genre.name %></p>
          <%= link_to "編集する", edit_admins_genre_path(genre), class: "btn btn-success" %>
        </div>
      <% end %>
      </div>
    </div>

  </div>
</div>