<div class="container">
  <div class="row">
    <div class="col-md-4">
      <h4><strong><%= @subscription.title %></strong></h4>
      <p><%= @subscription.descript%></p>
      <h6>
        <% tax_in = (@subscription.price * 1.10).round %>
          ¥<%= tax_in.to_s(:delimited) %>(税込)
      </h6>
    </div>
    <div class="col-md-4 product_show_image"></div>
  </div>
  <div class = "row">
    <div class="col-md-3 ml-auto">
            <%= form_with model:@join, url:users_joins_path, method: :post, local:true do |f|%>
             <%= f.hidden_field :subscription_id, value: @subscription.id %>
             <%= f.submit '次へ', class:"btn btn-primary" %>
          <% end %>
    </div>
  </div>
</div>