<div class="container">
  <div class="row">
    <div class="col">
       <h3 class="my-5"><%= @user.name %> さんの会員情報編集</h3>
      <h1>お問い合わせ</h1>
      <%= form_with model: @inquire, url:users_inquiries_path, local:true do |f| %>
        <h4>タイトル</h4>
        <%= f.text_field :title %>
        <h4>本文</h4>
        <%= f.text_area :massage %>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>