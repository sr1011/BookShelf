  <div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= render "users/users/show", users: @users %>
      <%= render "users/books/genre", genres: @genres %>
    </div>
  
    <div class="col-xs-8">
      <table class="table book-index">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th>タイトル</th>
          <th>作者</th>
          <th>ジャンル</th>
          <th></th>
          <th></th>
          <th></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to users_book_path(book.id) do %>
                <%= attachment_image_tag book, :image, :fill, 100, 100, format: 'jpeg' %>
                <% end %>
              </td>
              <td><%= book.name %></td>
              <td><%= book.author %></td>
              <td><%= book.genre.name %></td>
              <td><%= "#{book.book_comments.count} コメント" %></td>
              <td><%= "#{book.favorites.count} いいね" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>