  <div class="container">
  <div class="row">
    <div class="col-xs-4">
      <%= render "users/users/show", users: @users %>
      <%= render "users/books/genre", genres: @genres %>
    </div>
  
    <div class="col-xs-8">
      <table class="table book-index">
        <h2>Books</h2>
        <thead>
          <th></th>
          <th><%= sort_order "name", "タイトル" %></th>
          <th><%= sort_order "author", "作者" %></th>
          <th><%= sort_order "genre", "ジャンル" %></th>
          <th><%= sort_order "created_at", "登録順" %></th>
          <th><%#= sort_order "book_comments", "コメント数" %></th>
          <th><%#= sort_order "favorites", "いいね数" %></th>
          <th></th>
        </thead>
        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td>
                <%= link_to users_book_path(book.id) do %>
                <%= attachment_image_tag book, :image, :fill, 100, 100, format: 'jpeg' %>
                <% end %>
              </td>
              <td><%= book.name %></td>
              <td><%= book.author %></td>
              <td><%= book.genre.name %></td>
              <td><% book.created_at %></td>
              <td><%= "#{book.book_comments.count} コメント" %></td>
              <td><%= "#{book.favorites.count} いいね" %></td>
            </tr>
            <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>